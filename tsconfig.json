{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./lib",
    "sourceMap": false,
    "declaration": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "allowJs": true,
    "checkJs": false,
    "removeComments": true,
    "skipLibCheck": true,
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.styled.ts",
    "src/**/**/*.styled .ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "./node_modules",
    "node_modules",
    "**/*.dev.ts",
  ],
}
